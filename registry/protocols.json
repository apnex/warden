            }
          },
          "transitions": {
            "next": "3_GRADUATION"
          }
        },
        "3_GRADUATION": {
          "description": "Certification",
          "requirements": {
            "pry_cert": {
              "type": "regex_match_output",
              "pattern": "\\[DLR_CRT_PROFICIENCY\\].*"
            }
          },
          "transitions": {
            "next": "0_IDLE"
          }
        }
      }
    },
