            }
          },
          "transitions": {
            "next": "3_RATIFY"
          }
        },
        "3_RATIFY": {
          "description": "Director Approval",
          "transitions": {
            "next": "0_IDLE"
          }
        }
      }
    },
    "FIX_V2": {
      "meta": {
        "title": "Emergency Recovery Standard v2",
        "version": "2.0.0",
        "description": "Urgency is no Excuse for Instability."
      },
      "states": {
        "0_IDLE": {
          "type": "initial",
          "transitions": {
            "start": "1_CONTAINMENT"
          }
        },
        "1_CONTAINMENT": {
          "description": "Failure Analysis",
          "requirements": {
            "fix_trace": {
              "type": "regex_match_output",
              "pattern": "\\[DLR_TRC_ERROR\\].*"
